@model Tarea
<h2>Detalles de Tarea</h2>
<p><strong>Título:</strong> @Model.Titulo</p>
<p><strong>Descripción:</strong> @Model.Descripcion</p>
<p><strong>Estado:</strong> @Model.Estado</p>
<p><strong>Prioridad:</strong> @Model.Prioridad</p>
<p><strong>Fecha Vencimiento:</strong> @Model.FechaVencimiento</p>
<a asp-action="Edit" asp-route-id="@Model.Id">Editar</a>
<a asp-action="Index">Volver</a>