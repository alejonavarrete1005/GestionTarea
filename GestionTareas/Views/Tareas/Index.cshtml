@model IEnumerable<Tarea>
<h2>Tareas</h2>
<a asp-action="Create" class="btn btn-primary">Nueva Tarea</a>
<table class="table">
    <thead>
        <tr><th>Título</th><th>Estado</th><th>Prioridad</th><th>Vencimiento</th><th></th></tr>
    </thead>
    <tbody>
        @foreach (var t in Model)
        {
            <tr>
                <td>@t.Titulo</td>
                <td>@t.Estado</td>
                <td>@t.Prioridad</td>
                <td>@t.FechaVencimiento.ToShortDateString()</td>
                <td>
                    <a asp-action="Details" asp-route-id="@t.Id">Detalles</a>
                    <a asp-action="Edit" asp-route-id="@t.Id">Editar</a>
                    <a asp-action="Delete" asp-route-id="@t.Id">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>