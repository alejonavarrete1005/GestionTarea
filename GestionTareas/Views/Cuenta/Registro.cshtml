@model GestionTareas.Models.RegisterViewModel
@{
    ViewData["Title"] = "Registro de usuario";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Registro" method="post">
    <div class="form-group">
        <label asp-for="NombreCompleto"></label>
        <input asp-for="NombreCompleto" class="form-control" />
        <span asp-validation-for="NombreCompleto" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Correo"></label>
        <input asp-for="Correo" class="form-control" />
        <span asp-validation-for="Correo" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Clave"></label>
        <input asp-for="Clave" type="password" class="form-control" />
        <span asp-validation-for="Clave" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-success">Registrarse</button>
</form>

<p>¿Ya tienes cuenta? <a asp-action="Login">Inicia sesión</a></p>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
